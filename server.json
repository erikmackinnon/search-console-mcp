{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.saurabhsharma2u/search-console-mcp",
  "description": "MCP server for Google and Bing Search APIs. Includes sites, sitemaps, analytics, and URL inspection.",
  "repository": {
    "url": "https://github.com/saurabhsharma2u/search-console-mcp",
    "source": "github"
  },
  "version": "1.10.0",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "search-console-mcp",
      "version": "1.10.0",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "Google Cloud Service Account JSON key content or path",
          "isRequired": true,
          "format": "string",
          "isSecret": true,
          "name": "GOOGLE_APPLICATION_CREDENTIALS"
        },
        {
          "description": "Bing API Key",
          "isRequired": false,
          "format": "string",
          "isSecret": true,
          "name": "BING_API_KEY"
        }
      ]
    }
  ]
}